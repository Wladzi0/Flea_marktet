{% block content %}
   <div class="container">
       {% set countResult = advertisements | length %}
       {% if countResult < 1 %}
       <h2 >
           No results found :(</h2><br>
       {% else %}
           <h2>
               Found results ({{ countResult }})
           </h2><br>
       {% endif %}
       {%  for advertisement in advertisements %}
           <div class="card">
               <div class="card-image">
                   {% set mainPhoto = advertisement.images | first %}
                   {% if mainPhoto %}
                       <img src="{{ asset('images/advertisementImages/'~ mainPhoto.name) }}"/><br>
                   {% else %}
                       <img src="{{ asset('images/advertisementImages/defaultFirst.jpg') }}"/><br>
                   {% endif %}
               </div>
               <div class="card-text">
                   <h4>
                       {{ advertisement.name }}</h4>
                   <h4>
                   {{ advertisement.description }}</h4>
                   <p>{{ advertisement.price }}
                       z≈Ç
                   </p>

               </div>

